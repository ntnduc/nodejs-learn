extend ../layout/comon

block content

    h1 Login 

    if errors
        each error in errors 
            .alert.alert-danger= error

    form(action="/auth/login", method="POST") 
        .mb-3.row
            label.col-sm-2.col-form-label(for='email') Email
            .col-sm-10
                input#name.form-control(type='email', name="email", value = name)
        .mb-3.row
            label.col-sm-2.col-form-label(for='password') Password
            .col-sm-10
                input#name.form-control(type='password', name="password", value = phone)
        .d-flex.justify-content-end
            button.btn.btn-primary.mb-3 Login
